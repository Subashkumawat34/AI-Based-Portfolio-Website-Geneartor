<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= personalInfo.fullName %></title>
    <link
      rel="icon"
      type="image/x-icon"
      href="<%= personalInfo.profileImage %>"
    />
    <!-- Google Fonts & Icons -->
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary: #14213d; /* Midnight Blue */
        --accent: #fca311; /* Soft vibrant gold */
        --bg: #f4f6f8; /* Crisp light background */
        --card: #ffffff;
        --dark-accent: #ff8906;
        --text-main: #22223b;
        --shadow: 0 3px 16px 0 rgba(13, 18, 34, 0.12);
      }
      body {
        font-family: "Montserrat", Arial, sans-serif;
        background: var(--bg);
        color: var(--text-main);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        letter-spacing: 0.02em;
      }
      .header {
        background: var(--primary);
        color: #fff;
        padding: 24px 0 14px 0;
        box-shadow: var(--shadow);
        border-bottom: 4px solid var(--accent);
        position: sticky;
        top: 0;
        z-index: 200;
      }
      .logo {
        font-family: "Dancing Script", cursive;
        font-size: 2.2rem;
        color: var(--accent);
        text-decoration: none;
        padding-left: 1.8rem;
        letter-spacing: 0.04em;
        font-weight: 600;
      }
      .navbar {
        display: inline-block;
        margin-left: 40px;
      }
      .navbar a {
        color: #fff;
        text-decoration: none;
        margin: 0 14px;
        font-size: 1.13rem;
        font-weight: 600;
        letter-spacing: 0.03em;
        transition: color 0.2s;
        position: relative;
      }
      .navbar a.active,
      .navbar a:hover {
        color: var(--accent);
      }
      section {
        background: var(--card);
        box-shadow: var(--shadow);
        border-radius: 14px;
        margin: 36px auto;
        padding: 44px 6vw 38px 6vw;
        max-width: 1200px;
        min-width: 320px;
      }
      .home {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: space-between;
      }
      .home-content {
        max-width: 520px;
      }
      .home h1 span {
        color: var(--accent);
        font-size: 1.35em;
        font-family: "Dancing Script", cursive;
      }
      .home-img img {
        border-radius: 22px;
        background: #eaeaea;
        border: 4px solid var(--accent);
        width: 164px;
        height: 330px;
        object-fit: cover;
        margin-top: 14px;
        box-shadow: 0 4px 22px 0 rgba(20, 33, 61, 0.13);
      }
      .btn-group .btn {
        display: inline-block;
        background: var(--accent);
        color: var(--primary);
        margin: 12px 16px 0 0;
        padding: 10px 24px;
        border-radius: 6px;
        font-weight: 600;
        box-shadow: var(--shadow);
        letter-spacing: 0.01em;
        transition: background 0.2s, color 0.2s;
        text-decoration: none;
        border: none;
        cursor: pointer;
      }
      .btn-group .btn:hover {
        background: var(--primary);
        color: var(--accent);
      }
      .social-icons a {
        color: var(--accent);
        margin-right: 18px;
        font-size: 1.35em;
        transition: color 0.19s;
      }
      .social-icons a:hover {
        color: var(--dark-accent);
      }
      .timeline-items {
        display: flex;
        flex-direction: column;
        gap: 18px;
      }
      .timeline-item {
        background: #fafbfc;
        border-left: 5px solid var(--accent);
        border-radius: 5px;
        padding: 18px 22px 14px 22px;
        display: flex;
        gap: 16px;
        align-items: flex-start;
        box-shadow: 0 0 3px 0 #e0e0e0;
      }
      .timeline-dot {
        width: 11px;
        height: 11px;
        background: var(--primary);
        border-radius: 50%;
        margin-top: 9px;
      }
      .timeline-date {
        color: var(--primary);
        font-weight: bold;
        width: 115px;
      }
      .timeline-content h3 {
        margin-bottom: 7px;
        color: var(--accent);
      }
      .timeline-content ul.bullets-points {
        list-style: disc inside;
        margin: 0;
        padding-left: 22px;
      }
      .projects-container,
      .technologies-box .wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 22px;
      }
      .project-box,
      .tech-item {
        background: var(--bg);
        border-radius: 13px;
        box-shadow: 0 3px 18px 0 #eaeaea;
        padding: 22px;
        flex: 1;
        min-width: 230px;
        max-width: 340px;
        margin-bottom: 13px;
        transition: box-shadow 0.22s;
      }
      .project-box:hover,
      .tech-item:hover {
        box-shadow: 0 8px 36px 0 #ffd;
      }
      .project-box img,
      .tech-item img {
        width: 100px;
        height: 100px;
        object-fit: contain;
        border-radius: 13px;
        background: #f9f6ed;
        margin-bottom: 9px;
      }
      .portfolio-layer h4 {
        color: var(--primary);
        margin: 9px 0 5px 0;
        font-size: 1.08em;
      }
      .external-links a {
        color: var(--primary);
        margin-right: 11px;
        font-size: 1.18em;
      }
      .external-links a:hover {
        color: var(--accent);
      }
      .technologies-box h2 {
        margin-bottom: 24px;
      }
      .tech-item h2 {
        font-size: 1.05rem;
        margin-top: 8px;
      }
      .contact form {
        max-width: 740px;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
      }
      .input-group input,
      .input-group-2 textarea {
        padding: 9px 14px;
        width: 100%;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #bbb;
        margin: 6px 0;
        background: #fbf9f7;
        outline: none;
        transition: border 0.17s;
      }
      .input-group input:focus,
      .input-group-2 textarea:focus {
        border: 1.5px solid var(--accent);
      }
      .contact .btn {
        background: var(--primary);
        color: var(--accent);
        margin-top: 7px;
      }
      .contact .btn:hover {
        background: var(--accent);
        color: var(--primary);
      }
      .footer {
        background: var(--primary);
        color: #fff;
        text-align: center;
        padding: 28px 10px 0 10px;
        margin-top: 34px;
        border-radius: 18px 18px 0 0;
      }
      .footer a {
        color: var(--accent);
        text-decoration: none;
        margin: 0 9px;
      }
      .footer a:hover {
        color: #ffeaaa;
      }
      .list.left-side {
        display: inline-block;
        padding: 0;
        margin: 0;
      }
      .list.left-side li {
        display: inline-block;
        margin: 0 10px;
      }
      .copyright {
        margin-top: 10px;
        font-size: 0.95rem;
        opacity: 0.8;
      }
      @media (max-width: 980px) {
        .home {
          flex-direction: column;
          text-align: center;
        }
        .home-img {
          margin-top: 30px;
        }
        section {
          padding: 24px 2vw;
        }
        .timeline-item,
        .projects-container,
        .technologies-box .wrapper {
          flex-direction: column;
        }
        .timeline-dot {
          margin-top: 0;
        }
      }
      h2.heading {
        font-family: "Montserrat", Arial, sans-serif;
        font-size: 2rem;
        color: var(--primary);
        margin-bottom: 28px;
        border-left: 8px solid var(--accent);
        padding-left: 7px;
      }
      h2 span {
        color: var(--accent);
      }
    </style>
  </head>
  <body>
    <!-- Header Section -->
    <header class="header">
      <div class="sk-logo-div">
        <a href="#home" class="logo"><%= personalInfo.fullName %></a>
      </div>
      <i class="bx bx-menu" id="menu-icon"></i>
      <nav class="navbar" id="navbar">
        <a href="#home" class="active">Home</a>
        <a href="#education">Education</a>
        <a href="#projects">Projects</a>
        <a href="#technologies">Technologies</a>
        <a href="#contact">Contact</a>
      </nav>
    </header>

    <!-- Home Section -->
    <section class="home" id="home">
      <div class="home-content left-side">
        <h1>
          Hey, It's
          <span><%= personalInfo.nickname || personalInfo.fullName %></span>
        </h1>
        <h3 class="text-animation"><%= summary.tagline %></h3>
        <p><%= summary.introduction %></p>
        <div class="social-icons">
          <% if (personalInfo.socialLinks && personalInfo.socialLinks.length) {
          personalInfo.socialLinks.forEach(function(link){ %>
          <a href="<%= link.url %>" target="_blank">
            <i class="<%= link.iconClass %>"></i>
          </a>
          <% }) } %>
        </div>
        <div class="btn-group">
          <% if (personalInfo.resumeLink) { %>
          <a
            href="<%= personalInfo.resumeLink %>"
            target="_blank"
            download
            class="btn"
            >Resume</a
          >
          <% } %>
          <a href="#contact" class="btn">Contact</a>
        </div>
      </div>
      <div class="home-img right-side">
        <img
          src="<%= personalInfo.profileImage %>"
          alt="<%= personalInfo.nickname || personalInfo.fullName %>"
        />
      </div>
    </section>

    <!-- Education & Work Experience Section -->
    <section class="education" id="education">
      <h2 class="heading top-side">Education & Work Experience</h2>
      <div class="timeline-items">
        <% if (education && education.length) { education.forEach(function(e){
        %>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-date"><%= e.yearStart %> - <%= e.yearEnd %></div>
          <div class="timeline-content">
            <h3><span><%= e.degree %></span>, <%= e.institution %></h3>
            <% if (e.details) { %>
            <p><%= e.details %></p>
            <% } %>
          </div>
        </div>
        <% }) } %> <% if (workExperience && workExperience.length) {
        workExperience.forEach(function(w){ %>
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-date"><%= w.duration %></div>
          <div class="timeline-content">
            <h3><span><%= w.position %></span>, <%= w.organization %></h3>
            <% if (w.bulletPoints && w.bulletPoints.length) { %>
            <ul class="bullets-points">
              <% w.bulletPoints.forEach(function(point){ %>
              <li><%= point %></li>
              <% }) %>
            </ul>
            <% } else if (w.description) { %>
            <p><%= w.description %></p>
            <% } %>
          </div>
        </div>
        <% }) } %>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="projects" id="projects">
      <h2 class="heading top-side">Projects</h2>
      <div class="projects-container">
        <% if (projects && projects.length) { projects.forEach(function(prj){ %>
        <div class="project-box portfolio-box">
          <% if (prj.image) { %>
          <img src="<%= prj.image %>" alt="" />
          <% } %>
          <div class="portfolio-layer">
            <h4><%= prj.title %></h4>
            <p><%= prj.description %></p>
            <div class="external-links">
              <% if (prj.repo) { %>
              <a href="<%= prj.repo %>" target="_blank">
                <i class="fa-solid fa-code"></i>
              </a>
              <% } %> <% if (prj.demo) { %>
              <a href="<%= prj.demo %>" target="_blank">
                <i class="fa-solid fa-eye"></i>
              </a>
              <% } %>
            </div>
          </div>
        </div>
        <% }) } %>
      </div>
    </section>

    <!-- Technologies Section -->
    <section class="technologies" id="technologies">
      <div class="technologies-box">
        <h2 class="heading top-side">Technologies</h2>
        <div class="wrapper">
          <% if (technologies && technologies.length) {
          technologies.forEach(function(tech){ %>
          <div class="tech-item">
            <img src="<%= tech.image %>" alt="<%= tech.name %>" />
            <h2><%= tech.name %></h2>
          </div>
          <% }) } %>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact" id="contact">
      <h2 class="heading top-side">Contact <span>Me</span></h2>
      <form name="contact" novalidate>
        <div class="input-group left-side">
          <% if (contactInfo && contactInfo.formFields &&
          contactInfo.formFields.length) {
          contactInfo.formFields.forEach(function(field){ if (field.type !==
          'textarea') { %>
          <input
            type="<%= field.type %>"
            placeholder="<%= field.label %>"
            id="<%= field.name %>"
            name="<%= field.name %>"
            title="<%= field.label %>"
            required="<%= field.required %>"
          />
          <% } }) } %>
        </div>
        <div class="input-group-2 right-side">
          <textarea
            cols="30"
            rows="8"
            placeholder="Your Message"
            id="message"
            name="message"
            required
          ></textarea>
          <button type="submit" class="btn">Send Message</button>
        </div>
      </form>
    </section>

    <!-- Footer Section -->
    <footer class="footer">
      <div class="social top-side">
        <% if (personalInfo.socialLinks && personalInfo.socialLinks.length) {
        personalInfo.socialLinks.forEach(function(link){ %>
        <a href="<%= link.url %>" target="_blank">
          <i class="<%= link.iconClass %>"></i>
        </a>
        <% }) } %>
      </div>
      <ul class="list left-side">
        <li><a href="#home">About me</a></li>
        <li><a href="#projects">Projects</a></li>
        <li><a href="#contact">Contact</a></li>
        <li><a href="#technologies">Technologies</a></li>
      </ul>
      <p class="copyright right-side">
        © <%= personalInfo.fullName %> | All Rights Reserved <%= new
        Date().getFullYear() %>
      </p>
    </footer>
  </body>
</html>
